
{
    "manifest_version": 3,
    "name": "Tamagotchi Canvas Tracker",
    "version": "1.0",
    "description": "Your assignments determine if your Tamagotchi thrives or dies.",
    "permissions": [
      "storage",
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "https://canvas.instructure.com/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    }
  }
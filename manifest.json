{
  "manifest_version": 3,
  "name": "Study Buddy",
  "version": "1.0",
  "description": "A cute character helps you stay productive!",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/cat-icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "tabs"],
  "host_permissions": ["https://canvas.instructure.com/*"]
}